{
  "extends": "@repo/typescript-config/nestjs.json",
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["./src", "./test"],
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@application/*": ["application/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["node_modules"]
}
